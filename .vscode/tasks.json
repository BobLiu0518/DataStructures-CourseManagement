{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run debug",
            "type": "shell",
            "command": "make run DEBUG=1",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build release",
            "type": "shell",
            "command": "make rebuild DEBUG=0",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Run release",
            "type": "shell",
            "command": "make run DEBUG=0",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
